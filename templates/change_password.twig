{% extends "layouts/default.twig" %}
{% block content %}
<div class="row-fluid marketing">
    <div class="span12">
    <h4>Change Your Password</h4>
    {% include "flash.twig" %}
    <form class='form-search' id='change_password' action="{{ site.url }}/profile/change_password" method="post">
        <input name='passwd' type='password' id='profile-passwd' placeholder="New password"><br><br>
        <input name='passwd_confirm' type='password' id='profile-passwd-confirm' placeholder='New password (confirm)'>
        <br><br>
        <button type='submit' class='btn'>Change Password</button>
    </form>
</div>
{% endblock %}