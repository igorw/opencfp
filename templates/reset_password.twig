{% extends "layouts/default.twig" %}
{% block content %}
<div class="row-fluid">
    <div class="span12">
        <h4>Reset My Password</h4>
        <form class="form-horizontal" action="{{ site.url }}/reset" method="POST">
            {{ form_errors(form) }}
            {{ form_row(form._token) }}
            {{ form_row(form.password) }}
            {{ form_row(form.user_id) }}
            {{ form_row(form.reset_code) }}
            <button type="submit" class="btn btn-success" >Change my password</button>
        </form>
    </div>
</div>
{% endblock %}
